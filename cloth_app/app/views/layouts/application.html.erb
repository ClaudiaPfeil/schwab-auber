<!DOCTYPE html>
<html>
<head>
  <title>ClothApp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render '/layouts/set_meta_tags'%>
</head>
<body>
  <center>

  <div class="tr">
    <div class="td_image"><%= image_tag( "/images/sonne.gif", :width => "41", :height => "38", :alt => "") %></div>
  </div>

  <div class="tr">
    
    <%= link_to  image_tag("/images/menue_home.gif", :width => '108', :height => '40', :alt => 'Home' ), root_path%>
    <%= image_tag('/images/menue_thema1.gif', :width => '94', :height => '41', :alt => 'Profiles') %>
    <%= image_tag("/images/menue_thema1.gif", :width => '94', :height => '41', :alt => 'Packages' )%>
    <%= image_tag('/images/menue_thema1.gif', :width => '94', :height => '41', :alt => 'Searches') %>
    <%= image_tag('/images/menue_thema1.gif', :width => '94', :height => '41', :alt => 'Hilfe') %>
    <%= image_tag('/images/menue_kontakt.gif', :width => '94', :height => '41', :alt => 'Kontakt') %>

  </div>

  <div class="tr_titles">

    <div class="td_titles"><%= link_to "PROFILES", profiles_path %> </div>
    <div class="td_titles">
      <% if can? :read, Package%>
        <%= link_to "PACKAGES", packages_path %>
      <% else %>
        <%= link_to "PACKAGES", search_packages_path %>
      <% end %>
    </div>
    <div class="td_titles"><%= link_to "SEARCH", search_packages_path %> </div>
    <div class="td_titles"><%= link_to "HILFE", helps_path %> </div>
    <div class="td_titles"><%= link_to "CONTACT", contacts_path %></div>
    
  </div>

  <div class="tr_image">
    <div class="td_space"><%= image_tag('/images/pixel.gif', :width => "1", :height => "8", :alt => "")%></div>
  </div>

<div class="subnavi">
  <!--||| Der erste Punkt zeigt den Seitenbereich an und wird nicht verlinkt. Die Sublinks = das UntermenÃ¼ hier anpassen. |||-->
  <span class="sub">
    <%= link_to 'home', root_path %>
    <%= link_to '. packages',  packages_path%>
    <%= link_to '. search',  search_packages_path%>
    <%= link_to ". impressum ", impressums_path  %>
    <% unless current_user.nil? %>

      <%= link_to '. profiles', profiles_path%>
      
      <%  if (can? :manage, Content) || (can? :publish, Content) %>
        <%= link_to '. content', contents_path %>
        <%= link_to '. landing_page', landing_page_path %>
      <%  end %>

      <%= link_to '. logout', logout_path%>
    
    <% end %>
    <br>
  </span>

</div>

<div class="content">
    <br>
    <p align="justify">
      <span class="text">
       <%= yield %>
      </span>
    </p>
    <br>
</div>

<br>
<span class="sub">&copy; 2010.Schwab&Auber GbR. <a href="mailto:infoatkinderkleiderbox.de">E-mail senden</a></span>
<br>&nbsp;<br>


</center>

</body>
</html>
