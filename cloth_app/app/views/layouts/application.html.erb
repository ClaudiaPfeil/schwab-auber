<!DOCTYPE html>
<html>
<head>
  <title>KidsKarton</title>
  <%#= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'main.css', 'thickbox.css', 'jquery.simpledialog.0.1.css', 'jquery.jgrowl.css', 'jquery-ui-1.8.1.custom.css', 'blueprint/src/grid.css', 'forms.css', 'cp_cms.css' %>
  <!--[if lt IE 8]>
    <link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection">
  <![endif]-->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render '/layouts/set_meta_tags'%>
</head>
<body>
  <div id="all">
    <div id="header"></div>

    <div id="navigation">
      <!-- render navi_header -->
      <%= render '/layouts/subnavi' %>
    </div>

    <div id="content">

      <div id="right">
        <% if current_user %>
          <div id="info_box"><%= render "/profiles/infos", :profile => current_user %></div>
        <%  else %>
         <div id="login_form"><%= render '/sessions/login'  %></div>
         <div id="register"><p><%= link_to I18n.t(:register), signup_path, :class => "register" %></p></div>
        <% end %>
      </div>

      <div id="left">
        <%= yield %>
      </div>
      
    </div>
    
    <div id="footer">
      <!-- render navi_footer-->
      <%= render '/layouts/footer' %>
    </div>

  </div>
</body>
</html>