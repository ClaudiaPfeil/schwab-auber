<!DOCTYPE html>
<html>
<head>
  <title>KidsKarton</title>
  <%#= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'main.css', 'thickbox.css', 'jquery.simpledialog.0.1.css', 'jquery.jgrowl.css', 'jquery-ui-1.8.1.custom.css', 'blueprint/src/grid.css', 'forms.css', 'cp_cms.css' %>
  <!--[if lt IE 8]>
    <link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection">
  <![endif]-->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render '/layouts/set_meta_tags'%>
</head>
<body>
  <div id="all">
    <div id="header"></div>

    <div id="navigation">
      <!-- render navi_header -->
      <%= render '/layouts/subnavi' %>
    </div>

    <div id="content">
      <div id="left">
        <%= yield %>
      </div>

      <div id="right">
        <% if current_user %>
          <div id="info_box">&nbsp;</div>
        <%  else %>
          <%= render '/sessions/login'  %>
        <% end %>
      </div>
    </div>

    <div id="footer">
      <!-- render navi_footer-->
      <a href="#" class="footer">&Uuml;ber uns</a>
      <a href="#" class="footer" onfocus="this.blur()">Kontakt</a><a href="#" class="footer" onfocus="this.blur()">AGB</a>
      <a href="#" class="footer" onfocus="this.blur()">Rechtliches</a>
      <a href="#" class="footer" onfocus="this.blur()">Affilates</a>
    </div>

  </div>
</body>
</html>