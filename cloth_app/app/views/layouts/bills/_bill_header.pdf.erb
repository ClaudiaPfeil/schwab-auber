<%# Kontaktadresse Nutzer, Kundennummer, Bestellnummer, Bestelldatum, Paketnummer, Rechnungsnummer %>

  <% address = get_address.first %>
  <div class="span-12 td">
    <% if address %>
    <ol>
      <li><%= address.receiver %> </li>
      <li><%= address.receiver_additional %></li>
      <li><%= address.street_and_number %> </li>
      <li><%= address.postcode %> <%= address.town %></li>
    </ol>
   <% end %>
  </div>

  <div class="span-6 td last">
    <ol>
      <li>Rechnungsdatum:   <%= formatted_date(Date.today)%> </li>
      <li>Rechnungsnummer:  <%= @bill.bill_number  %></li>
      <li>Bestelldatum:     <%= formatted_date(@bill.created_at)  %></li>
      <li>Bestellnummer:    <%= @bill.order_number  %></li>
      <li><%# Kundennummer %></li>
    </ol>
  </div>


