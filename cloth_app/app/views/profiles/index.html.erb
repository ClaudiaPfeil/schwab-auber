<%= I18n.t(:profiles) %>

<%=  get_notices %>

<p align="right">
  <% if can? :create, Profile %>
    <%= link_to I18n.t(:new), new_profile_path %>
  <%end%>
</p>

<div class="tr">
  <div class="first">&nbsp;</div>
  <% ListView.get_table_columns(Profile, [:name, :email, :sex, :name, :address, :membership, :telephone]).each do |column| %>
    <div class="td span-2"><b><%=  I18n.t(column)%></b> </div>
  <% end %>
  <div class="last">&nbsp;</div>
</div>

<% @profiles.each do |profile| %>
  <div class="tr">
    <div class="first">&nbsp;</div>

    <% ListView.get_entries(Profile, @profiles, [:name, :email, :sex, :name, :address, :membership, :telephone]).each do |name| %>
        <div class="td span-2"><%= name unless name.blank? %></div>
    <% end %>

    <div class="last">
      <% if can? :update, Profile %>
        <%= link_to I18n.t(:edit), edit_profile_path(profile) %>
      <%end%>
      <% if can? :delete, Profile %>
        <%= link_to I18n.t(:delete), profile, :confirm => I18n.t(:confirm_profile) , :method => 'delete' %>
      <%end%>
    </div>
  </div>
<% end  %>



