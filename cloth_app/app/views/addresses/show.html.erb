<%= semantic_form_for @address do |address|%>

  <%= address.input :receiver %>
  <%= address.input :receiver_additional %>
  <%= address.input :street_and_number %>
  <%= address.input :postcode %>
  <%= address.input :town %>
  <%= address.input :land %>
  <%= address.input :kind, :as => :radio, :collection => {"Lieferanschrift" => 0, "Rechnungsanschrift" => 1} %>

<% end %>

<%= link_to I18n.t(:back), edit_profile_path(@address.user_id) %>
