<%= semantic_form_for @content,:html => {:multipart => true} do |content| %>
  <%=  get_notices %>
  <%= content.inputs "<h2>"+ I18n.t(:content_details) + "</h2>" do %>
    <%= content.input :category %>
    <%= content.input :title %>
    <%= content.input :subtitle %>
    <%= content.input :article, :input_html => {:cols => 80, :rows => 15} %><br>
    <%= content.input :image_file_name  %>
    <%= content.input :link %>
    <%= content.input :link_name %>
    <p><%= content.input :image, :as => :file %></p>
    <p><%= content.input :published, :as => :boolean %></p>
  <% end %>

  <%= content.buttons %>

<% end %>
<p align="center"><%= link_to I18n.t(:back), contents_path %></p>