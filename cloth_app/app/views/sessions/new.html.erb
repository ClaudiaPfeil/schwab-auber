<div class="span-9 prepend-1">
  <h1>Anmelden</h1>
  <%= get_notices %>
  <p>
    <% unless get_notices.blank? %>
      <%= link_to "Passwort vergessen?", '#', :rel => 'forgot_password', :class => 'simpledialog' %>
      <div id="forgot_password" style="display: none"><%= render 'forgot_password', :login => params[:login] %> </div>
    <% end %>
  </p>
  
  <%= form_tag session_path do -%>
  <p><%= label_tag 'login' %>
  <%= text_field_tag 'login', @login %></p>

  <p><%= label_tag 'password' %>
  <%= password_field_tag 'password', nil %></p>

  <p><%= label_tag 'remember_me', 'Remember me' %>
  <%= check_box_tag 'remember_me', '1', @remember_me %></p>

  <p><%= submit_tag 'Log in' %></p>
  <% end -%>

  
</div>



<%= render '/contents/cms/site', :contents => @contents %>






