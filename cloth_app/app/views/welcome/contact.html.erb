<%= get_notices %>
<%= render '/contents/cms/site', :contents => @contents %>
<%= semantic_form_for @contact, :url => { :controller => :welcome, :action => :get_in_contact} do |contact| %>
  <%= contact.input :title, :label => I18n.t(:contact_title) %>
  <%= contact.input :receiver, :label => I18n.t(:contact_name) %>
  <%= contact.input :street_and_number %>
  <%= contact.input :postcode %>
  <%= contact.input :town %>
  <%= contact.input :land %>
  <%= contact.input :email, :label => I18n.t(:email) %>
  <%= contact.input :telephone, :label => I18n.t(:telephone) %>
  <%= contact.input :mobile, :label => I18n.t(:mobile) %>
  <%= contact.input :message, :as => :text, :label => I18n.t(:contact_message) %>
  <%= contact.commit_button I18n.t(:contact_send) %>
<% end %>