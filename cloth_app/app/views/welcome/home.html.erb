<div class="tr">
<% sum = @welcome.count  %>

<% @welcome.each do |welcome| %>
  
  <% if welcome.is_published? || params[:preview] %>

    <% sum = sum -1 %>

    <% if sum.modulo(2) == 0 %>

        <div class="td_content">

          <%= render "content",:welcome => welcome %>

        </div>

      </div>
    <% else %>

      <div class="td_content">

        <%= render "content",:welcome => welcome %>

      </div>

    <% end %>

  <% end %>

<% end%>



