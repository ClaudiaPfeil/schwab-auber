<div class="tr">

  <div class="span-15 prepend-1 last">
    <h1>Registrieren als neues Mitglied</h1>
    <h2>und Kleidertauschen</h2>

    <% @user.password = @user.password_confirmation = nil %>

    <%= error_messages_for :user %>

    <%= semantic_form_for @user do |user| %>

      <%= user.input :first_name%>
      <%= user.input :last_name%>
      <%= user.input :street_and_number %>
      <%= user.input :postcode%>
      <%= user.input :town %>
      <%= user.input :login, :input_html => {:size => '50'} %>
      <%= user.input :email%>
      <%= user.input :password, :as => :password%>
      <%= user.input :password_confirmation, :as => :password, :hint => 'BestÃ¤tigen sie ihr Password' %>
      <%= user.input :role, :value => 'registered', :as => :hidden %>

      <%= user.buttons do %>
        <%= user.commit_button "Registrieren" %>
      <% end %>

    <% end %>

  </div>
</div>


