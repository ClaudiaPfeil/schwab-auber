<%= semantic_form_for :user, :url => {:controller => :users, :action => :reset_password} do |user| %>

  <%= user.input :password, :as => :password %>
  <%= user.input :password_confirmation, :as => :password, :hint => 'Bestätigen sie ihr Password' %>

  <%= user.commit_button 'Passwort zurücksetzen' %>

<% end %>
