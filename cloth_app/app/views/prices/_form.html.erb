<%= semantic_form_for @price do |price| %>

  <%= price.input :kind, :as => :radio,  :collection => {I18n.t(:base) => false, I18n.t(:premium)  => true} %>
  <%= price.input :shipping %>
  <%= price.input :handling%>
  <%= price.input :three_months %>
  <%= price.input :six_months %>
