<%= "Packages" %>

<p>
  <% if can? :create, Package %>
    <%= link_to "New", new_package_path %>
  <%end%>
</p>

<div class="tr">
  <div class="td"><b><%= "Name"%></b> </div>
  <div class="td"><b><%= "Sex"%></b> </div>
  <div class="td"><b><%= "Size"%></b> </div>
  <div class="td"><b><%= "Amount"%></b> </div>
  <div class="td"><b><%= "Description"%></b> </div>
</div>

<% @packages.each do |package| %>

  <div class="tr">
    <div class="td"><%= package.name%> </div>
    <div class="td"><%= package.sex%> </div>
    <div class="td"><%= package.size%> </div>
    <div class="td"><%= package.amount_clothes%> </div>
    <div class="td"><%= truncate(package.notice, :length => 20, :omission => "...")%> </div>
    <% if can? :update, package %>
      <div class="td"><%= link_to  "Edit", edit_package_path(package)%> </div>
    <% end %>
    <% if can? :destroy, package %>
      <div class="td"><%= link_to "Destroy", package, :confirm => 'Möchten sie das Packet wirklich löschen?', :method => :delete %> </div>
    <%end%>
  </div>

<% end %>
