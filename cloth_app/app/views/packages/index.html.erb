<h1><%= I18n.t("show_packages") %></h1>
<%=  get_notices %>
<p align="right">
  <% if can? :create, Package %>
    <%= link_to "New", new_package_path %>
  <%end%>
</p>

<div class="tr">
  <div class="td"><b><%= I18n.t("name")%></b> </div>
  <div class="td"><b><%= I18n.t("sex")%></b> </div>
  <div class="td"><b><%= I18n.t("size")%></b> </div>
  <div class="td"><b><%= I18n.t("amount")%></b> </div>
  <div class="td"><b><%= I18n.t("description")%></b> </div>
</div>

<% unless @packages.nil? %>
  <% @packages.each do |package| %>

    <div class="tr">
      <div class="td"><%= package.name%> </div>
      <div class="td"><%= package.sex ? I18n.t("girl") : I18n.t("boy")%> </div>
      <div class="td"><%= package.size%> </div>
      <div class="td"><%= package.amount_clothes%> </div>
      <div class="td"><%= truncate(package.notice, :length => 20, :omission => "...")%> </div>
      <div class="td">
        <% if can? :update, package %>
         <%= link_to  I18n.t("edit"), edit_package_path(package)%>
        <% end %>
        <% if can? :destroy, package %>
          <%= link_to I18n.t("destroy"), package, :confirm => I18n.t(:confirm_destroy), :method => :delete %>
        <%end%>
      </div>
    </div>

  <% end %>
<% end %>
