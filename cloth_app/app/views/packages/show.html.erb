<%= "Package" %>

<div class="tr">
  <div class="td"><b><%= "Name"%></b> </div>
  <div class="td"><b><%= "Sex"%></b> </div>
  <div class="td"><b><%= "Size"%></b> </div>
  <div class="td"><b><%= "Amount"%></b> </div>
  <div class="td"><b><%= "Description"%></b> </div>
</div>

<div class="tr">
  <div class="td"><%= package.name%> </div>
  <div class="td"><%= package.sex%> </div>
  <div class="td"><%= package.size%> </div>
  <div class="td"><%= package.amount%> </div>
  <div class="td"><%= description%> </div>

  <% if can? :confirm && package.confirm.nil?, package %>
    <div class="td"><%= link_to "Confirm", package, :confirm => 'Do you like to confirm the rules?', :method => :create %> </div>
    <div class="td"><%= link_to "Cancel", package, :confirm => 'Do you like to cancel?', :method => :index %> </div>
  <%end%>
    
</div>



