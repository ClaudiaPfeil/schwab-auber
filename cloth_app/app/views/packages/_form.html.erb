<%= semantic_form_for @package do |package| %>

  <%=  get_notices %>

  <%= package.inputs I18n.t('package') do  %>
    <p><%= package.input :name  %></p>
    <p><%= package.input :sex, :as => :radio, :collection => [["Junge", false],["MÃ¤dchen", true]] %></p>
    <p><%= package.input :size %></p>
    <p><%= package.input :next_size %></p>
    <p><%= package.input :age %></p>
    <p><%= package.input :saison %></p>
    <%= package.input :kind, :hint => I18n.t('hint_kind') %><br><br>
    <p><%= package.input :amount_clothes, :hint => I18n.t('hint_amount_clothes') %></p>
    <p><%= package.input :label %></p>
    <p><%= package.input :amount_labels %></p>
    <p><%= package.input :colors, :hint => I18n.t('hint_colors') %></p>
    <p><%= package.input :notice%></p>
  <% end %>

  <%= package.inputs link_to I18n.t('rules'), '#', :rel => "test", :class => 'simpledialog' do %>
    <%= package.input :accepted, :as => :boolean, :hint => I18n.t("hint_accepted") %>
    <%= package.input :confirmed, :as => :boolean, :hint => I18n.t("hint_confirmed") %>
  <% end %>

  <%= package.input :user_id, :value => current_user.id, :as => :hidden %>

  <%= package.buttons %>

<% end %>

<div id="test" style="display: none">
  <%= render '/contents/cms/site', :@contents => @contents %>
</div>

