<%= semantic_form_for @package do |package| %>

  <%=  get_notices %>

  <%= package.inputs "<h2> #{I18n.t(:form_package)}</h2>" do  %>
    <%= package.input :name  %>
    <p><%= package.input :sex, :as => :radio, :collection => [[I18n.t(:boy), false],[I18n.t(:girl), true]] %></p>
    <p><%= package.input :size,
                         :as => :select,
                         :collection  =>  @package.get_contents("Size"),
                         :include_blank =>  false
        %></p>
    <p><%= package.input :next_size,
                         :input_html => {:readonly => true}

        %></p>
    <p><%= package.input :age,
                         :as  =>  :select,
                         :collection  =>  @package.get_contents("Age"),
                         :include_blank =>  false
        %></p>

    <p><%= package.input :saison,
                         :as => :select,
                         :collection =>  translate(@package.get_contents("Saison")),
                         :include_blank =>  false,
                         :input_html  => {:multiple  =>  true}
       %></p>

    <%= package.input :kind,
                      :hint => I18n.t('hint_kind'),
                      :as =>  :select,
                      :collection => translate(@package.get_contents("Kind")),
                      :include_blank  => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %>

    <%= package.input :shirts,
                      :as => :select,
                      :collection => translate(@package.get_contents("Shirts")),
                      :include_blank  => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %>

    <%= package.input :blouses,
                      :as => :select,
                      :collection => translate(@package.get_contents("Blouses")),
                      :include_blank  => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %>

    <%= package.input :jackets,
                      :as => :select,
                      :collection => translate( @package.get_contents("Jackets")),
                      :include_blank  => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %>

    <%= package.input :jeans,
                      :as =>  :select,
                      :collection =>  translate(@package.get_contents("Jeans")),
                      :include_blank  => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %>

    <%= package.input :dresses,
                      :as =>  :select,
                      :collection =>  translate(@package.get_contents("Dresses")),
                      :include_blank  => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %>

    <%= package.input :basics,
                      :as =>  :select,
                      :collection =>  translate(@package.get_contents("Basics")),
                      :include_blank  => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %>

    <p>
    <%= package.input :amount_clothes, :hint => I18n.t('hint_amount_clothes'),
                      :as => :select,
                      :collection  =>  @package.get_contents("Amount"),
                      :include_blank => false
    %></p>

    <p>
    <%= package.input :label,
                      :as => :select,
                      :collection  => @package.get_contents("Label"),
                      :include_blank => false,
                      :input_html  => {:multiple  =>  true, :size => 3}
    %></p>
    
    <p><%= package.input :amount_labels,
                         :as => :select,
                         :collection  => @package.get_contents("Amount"),
                         :include_blank => false
    %></p>
    <p><%= package.input :colors, :hint => I18n.t('hint_colors'),
                         :as => :select,
                         :collection  => translate(@package.get_contents("Colors")),
                         :include_blank =>  false,
                         :input_html  => {:multiple  =>  true, :size => 3}
    %></p>
    <p><%= package.input :notice%></p>
  <% end %>

  <%= package.inputs link_to I18n.t('rules'), '#', :rel => "test", :class => 'simpledialog' do %>
    <%= package.input :accepted, :as => :boolean, :hint => I18n.t("hint_accepted") %>
    <%= package.input :confirmed, :as => :boolean, :hint => I18n.t("hint_confirmed") %>
  <% end %>

  <%= package.input :user_id, :value => current_user.id, :as => :hidden %>

  <%= package.buttons %>

<% end %>

<div id="test" style="display: none">
  <%= render '/contents/cms/site', :@contents => @package.get_rules %>
</div>

<p align="center"><%= link_to I18n.t(:back), packages_path %></p>

