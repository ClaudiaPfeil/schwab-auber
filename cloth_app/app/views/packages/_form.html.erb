<%= semantic_form_for @package do |package| %>

  <%= package.inputs 'Paket' do  %>
    <p><%= package.input :name  %></p>
    <p><%= package.input :sex, :hint => 'Ein Paket für Jungs' %></p>
    <p><%= package.input :size %></p>
    <p><%= package.input :next_size %></p>
    <p><%= package.input :age %></p>
    <p><%= package.input :saison %></p>
    <%= package.input :kind %><br><br>
    <p><%= package.input :amount_clothes %></p>
    <p><%= package.input :label %></p>
    <p><%= package.input :amount_labels %></p>
    <p><%= package.input :colors %></p>
    <p><%= package.input :notice%></p>
  <% end %>

  <%= package.inputs link_to "Regeln", terms_and_conditions_path, :id => "rules" do %>
    <%= package.input :accepted, :as => :boolean, :hint => 'Ich akzeptiere die Regeln.' %>
    <%= package.input :confirmed, :as => :boolean, :hint => 'Ich habe die Regeln akzeptiert und bestätige diese.' %>
  <% end %>

  <%= package.buttons %>

<% end %>
